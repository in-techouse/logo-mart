<!-- BEGIN OF site header Menu -->
<header class="page-header navbar page-header-alpha scrolled-white menu-right topmenu-right"
  style="min-height: 100px; background-color: #303030;">

  <!-- Begin of logo/brand -->
  <a class="navbar-brand" href="/" target="_blank">
    <span class="logo">
      <img class="light-logo" src="/public/img/logo1.png" alt="Logo" />
    </span>
    <span class="text">
      <span class="line">Logo Mart</span>
    </span>
  </a>
  <!-- End of logo/brand -->

  <!-- begin of menu wrapper -->
  <div class="all-menu-wrapper" id="navbarMenu">
    <!-- Begin of top menu -->
    <nav class="navbar-topmenu">
      <!-- Begin of CTA Actions, & Icons menu -->
      <ul class="navbar-nav navbar-nav-actions">
        <li class="nav-item">
          <button class="btn btn-danger btn-sm" id="delete"
            style="background-color: #B03A2E; margin-top: 7px; display: none;">
            <i class="icon fa fa-trash"></i> Delete
          </button>
        </li>
        <li class="nav-item">
          <button class="btn btn-primary" id="download">
            <i class="icon fa fa-download"></i> Download
          </button>
        </li>
        <% if (user && user !== undefined && user !== null && user.userId){%>
        <li class="nav-item">
          <div class="dropdown">
            <button class="btn btn-outline-white btn-round dropdown-toggle" type="button" id="dropdownMenuButton"
              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= user.firstName %> <%= user.lastName %>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="/myDesigns">My Designs</a>
              <a class="dropdown-item" href="/logout">Logout</a>
            </div>
          </div>
        </li>
        <%} else {%>
        <li class="nav-item">
          <a class="btn btn-outline-white btn-round" href="/signin">
            Sign-In
          </a>
          <a class="btn btn-outline-white btn-round" href="/signup">
            Sign-Up
          </a>
        </li>
        <%}%>
      </ul>
      <!-- End of CTA & Icons menu -->
    </nav>
    <!-- End of top menu -->

    <!-- Begin of sidebar nav menu params class: text-only / icon-only-->
    <nav class="navbar-fixed-left" style="background-color: #303030;">
      <div class="container-fluid h-100">
        <div class="row justify-content-center h-100">
          <div class="col-md-3 hidden-md-down" style="padding: 0px; background-color: #D1335B;">
            <ul class="nav designNav btn-pref">
              <li>
                <a class="btn btn-large btn-block btn-primary active show" href="#tab1" data-toggle="tab">
                  <i class="icon designNavIcon ion-android-search"></i>
                  <div class="hidden-xs">ICON</div>
                </a>
              </li>
              <li>
                <a class="btn btn-large btn-block" href="#tab2" data-toggle="tab">
                  <i class="icon designNavIcon ion-android-create"></i>
                  <div class="hidden-xs">TEXT</div>
                </a>
              </li>
              <li>
                <a class="btn btn-large btn-block" href="#tab3" data-toggle="tab">
                  <i class="icon designNavIcon ion-ios-home-outline"></i>
                  <div class="hidden-xs" style="margin-left: -9px;">Size-Color</div>
                </a>
              </li>
              <li>
                <a class="btn btn-large btn-block" href="#tab4" data-toggle="tab">
                  <i class="icon designNavIcon ion-ios-home-outline"></i>
                  <div class="hidden-xs" style="margin-left: -18px;">Background</div>
                </a>
              </li>
            </ul>
          </div>
          <div class="col-md-9 hidden-md-down" style="background-color: lightgray;">
            <div class="row">
              <div class="tab-content">
                <div class="tab-pane fade in active show" id="tab1">
                  <%- include('../pages/design/iconTab.ejs')%>
  </div>
  <div class="tab-pane fade in" id="tab2">
    <%- include('../pages/design/fontTab.ejs')%>
  </div>
  <div class="tab-pane fade in" id="tab3">
    <%- include('../pages/design/fontColorTab.ejs')%>
  </div>
  <div class="tab-pane fade in" id="tab4">
    <%- include('../pages/design/backgroundTab.ejs')%>
  </div>
  </div>
  </div>
  </div>
  </div>
  </div>
  </nav>
  <!-- End of sidebar nav menu -->
  </div>
  <!-- end of menu wrapper -->
</header>
<!-- END OF site header Menu-->