<div class="row">
  <div class="col-md-6">
    <input type="text" class="form-control" name="designName" placeholder="Design Name" required/>
  </div>
  <div class="col-md-6">
    <input type="file" class="form-control" id="designFile" accept="image/*" required/>
  </div>
  <br /><br /><br />
  <div class="col-md-12">
    <input type="hidden" class="form-control" id="designURL" name="designURL" />
  </div>
  <br /><br /><br />
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <img id="showDesign" class="img-thumbnail img-responsive" />
    <br /><br />
    <div class="progress" style="display: none;">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100"
        aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>
    <br /><br /><br />
    <p class="btn btn-sm btn-outline-success" id="upload" style="float: right; display: none;">UPLOAD IMAGE</p>
    <br /><br /><br />
    <input type="submit" class="btn btn-primary btn-block" id="submit" value="Submit" style="text-transform: uppercase;" />
  </div>
  <div class="col-md-2"></div>
</div>


<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
        $('#showDesign').attr('src', e.target.result);
        $("#upload").show(400);
      }

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#designFile").change(function () {
    readURL(this);
  });
</script>