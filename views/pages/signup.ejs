<% extend('./../layout.ejs') %>
<div class="row">
    <div class="col-md-3 col-sm-2 col-xs-12"></div>
    <div class="col-md-6 col-sm-8 col-xs-12">
        <div class="jumbotron" style="padding-top: 7px!important; padding-bottom: 7px!important;">
            <div class="row">
                <form id="signUpForm" action="/signup" method="POST">
                    <h1 style="text-align:center">SignUp</h1>
                    <br>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group form-success-gone">
                                <label for="reg-name">First Name</label>
                                <input name="firstName" required type="text" placeholder="First Name"
                                    class="form-control-line form-control-white" id="fname" minlength="3" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-success-gone">
                                <label for="reg-name">Last Name</label>
                                <input name="lastName" required type="text" placeholder="Last Name"
                                    class="form-control-line form-control-white" id="lname" minlength="3" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-success-gone">
                        <label for="reg-name">Email</label>
                        <input name="email" required type="email" placeholder="Email Address"
                            class="form-control-line form-control-white" id="email" />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group form-success-gone">
                                <label for="reg-name">Password</label>
                                <input name="password" required type="password" placeholder="Password"
                                    class="form-control-line form-control-white" id="password" minlength="6" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-success-gone">
                                <label for="reg-name">Confirm Password</label>
                                <input name="passwordConfirmation" required type="password"
                                    placeholder="Retype Password" class="form-control-line form-control-white"
                                    id="re_password" minlength="6" />
                            </div>
                        </div>
                    </div>


                    <% if (error != "" ){ %>
                    <div class="form-group form-success-gone">
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                    </div>
                    <% } %>
                    <input type="submit" value="Sign Up" class="btn btn-primary btn-block" style="text-transform: uppercase;"/>
                </form>
            </div>
            <div class="row" style="padding: 30px 0px 0px 0px;">
                <div class="col-md-5 col-sm-5 col-xs-12">
                    <a href="#" class="btn btn-success btn-sm btn-block">
                        SIGN-IN with <b>FACEBOOk</b> <i class="icon fa fa-facebook"></i>
                    </a>
                </div>
                <div class="col-md-2 col-sm-2 col-xs-12"></div>
                <div class="col-md-5 col-sm-5 col-xs-12">
                    <a href="#" class="btn btn-success btn-sm btn-block">
                        SIGN-IN with <b>GOOGLE</b> <i class="icon fa fa-google"></i>
                    </a>
                </div>
            </div>
            <div class="row" style="padding: 30px 0px 0px 0px;">
                <div class="col-md-12">
                    <a href="/signin" class="btn btn-info btn-sm btn-block">Already have an account? Click here to
                        <b>LOGIN</b></a>
                </div>
            </div>
            <div class="row" style="padding: 30px 0px 0px 0px;">
                <div class="col-md-12">
                    <a href="/recovery" class="btn btn-info btn-sm btn-block">Forgot Password? Click here to
                        <b>RECOVER</b></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-2 col-xs-12"></div>
</div>