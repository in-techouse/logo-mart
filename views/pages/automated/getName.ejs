<% extend('./../../layout.ejs') %>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="jumbotron">
            <form id="logoFeatureInForm" method="POST" action="/automated/getName">
                <h1 style="text-align:center">PROVIDE US SOME DETAILS</h1>
                <div class="form-group form-success-gone">
                    <input name="type" required type="hidden" class="form-control-line form-control-white"
                        value="<%= type %>" />
                </div>
                <div class="form-group form-success-gone">
                    <input name="companyName" required type="text" placeholder="Enter Your Company Name*"
                        class="form-control-line form-control-white" style="padding: 20px 20px;" />
                </div>

                <div class="form-group form-success-gone">
                    <input name="tagline" type="text" placeholder="Enter Your Tagline (optional)"
                        class="form-control-line form-control-white" style="padding: 20px 20px;" />
                </div>

                <div class="form-group form-success-gone" style="margin-top: 70px;">
                    <button type="submit" class="btn btn-primary btn-block">NEXT</button>
                </div>

            </form>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>